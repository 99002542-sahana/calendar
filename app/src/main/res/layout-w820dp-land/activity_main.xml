<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckedTextView
            android:id="@+id/toolbar_toggle"
            android:text="@string/app_name"
            tools:text="March 2016"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
            android:freezesText="true"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>

    <io.github.hidroh.calendar.widget.EventCalendarView
        android:id="@+id/calendar_view"
        android:layout_below="@id/toolbar"
        android:layout_width="@dimen/calendar_width"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_toRightOf="@id/calendar_view"
        android:layout_toEndOf="@id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
